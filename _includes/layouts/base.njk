<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ renderData.title or title or metadata.title }}</title>
    <meta name="Description" content="{{ renderData.description or description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <script>
    const SPLASH_SCREEN_KEY = 'SPLASH_SCREEN_HAS_BEEN_SHOWN';
    const SPLASH_SCREEN_DURATION = 1500;

    const showSplashScreen = !Boolean(sessionStorage[SPLASH_SCREEN_KEY]);

    if (showSplashScreen) {
      const className = 'show-splash-screen';
      document.documentElement.classList.add(className);
      sessionStorage.setItem(SPLASH_SCREEN_KEY, true);

      setTimeout(() => document.documentElement.classList.remove(className), SPLASH_SCREEN_DURATION);
    }
    </script>
  </head>
  <body>
    <header>
      <h1 class="home">
        <a href="{{ '/' | url }}">
          <div class="sun">
            <img src="{{ '/img/sindre.jpeg' | url }}" alt="" />
            <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
 version="1.0" viewbox="0 0 100 100" width="300" height="300">
              <style>
                .sun-path {
                  fill: transparent;
                  stroke: #ff9800; 
                  stroke-width: 3;
                }
              </style>
              <path class="sun-path" d="M50 0 l0 10 M90 10 l-8 8 M100 50 l-10 0 M90 90 l-8 -8 M50 100 l0 -10 M10 90 l8 -8 M0 50 l10 0 M10 10 l8 8"/>
            </svg>
          </div>
            <span>Sindre</span>
          {# <img class="logo" alt="Home" src="{{ '/img/signature.svg' | url }}" /> #}
        </a>
      </h1>
      <ul class="nav">
        {%- for nav in collections.nav | reverse -%}
          <li class="nav-item{% if nav.url == page.url %} nav-item-active{% endif %}">
            <a href="{{ nav.url | url }}">{{ nav.data.navtitle }}</a>
          </li>
        {%- endfor -%}
      </ul>
    </header>

    <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
      {{ content | safe }}
    </main>

    <footer></footer>

    <div class="splash-screen">
    <svg xmlns="http://www.w3.org/2000/svg" 
  xmlns:xlink="http://www.w3.org/1999/xlink" version="1.0" viewbox="0 0 100 100">
  <style>
    .signature-path {
      animation: draw-signature 4s linear forwards;
      fill: transparent;
      stroke: currentColor;
      stroke-dasharray: 1000;
      stroke-dashoffset: 1000;
    }
    
    .signature-path--2 {
      animation-delay: .75s;
    }
    
    @keyframes draw-signature {
      to {
        stroke-dashoffset: 0;
      }
    }
  </style>
  <path class="signature-path signature-path--1" d="M 67 0 Q 25 16.667, 50, 33.333 T 50 66.667 Q 75 83.333, 50 100" />
  <path class="signature-path signature-path--2" d="M 54 50 L 54 82.333" />
</svg>
      {# <img src="{{ '/img/signature.svg' | url }}" alt="" /> #}
    </div>
  </body>
</html>